<!DOCTYPE html>
<html lang="pt-br">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<title>Dashboard - EcoCleanSystem</title>
<link rel="stylesheet" href="/css/dashboard.css" />
</head>
<body>
<header class="header">
    <h1>Bem-vindo ao EcoCleanSystem</h1>
    <nav>
        <a href="/logout" class="logout-btn">Sair</a>
    </nav>
</header>

<main class="main-container">
    <section class="calendar-section">
        <h2>Calendário de Agendamentos</h2>
        <div id="calendar"></div>
    </section>

    <section class="agendamento-lista">
        <h2>Agendamentos para <span id="dataSelecionada">Selecione um dia</span></h2>
        <ul id="listaAgendamentos">
            <!-- Lista de agendamentos do dia aparecerá aqui -->
        </ul>
        <button id="btnNovoAgendamento" class="btn">Novo Agendamento</button>
    </section>
</main>

<!-- Modal Simples para novo agendamento -->
<div id="modalAgendamento" class="modal hidden">
    <div class="modal-content">
        <h3>Novo Agendamento</h3>
        <form id="formAgendamento">
            <label for="servico">Serviço:</label>
            <select id="servico" name="servico" required>
                <% servicos.forEach(servico => { %>
                    <option value="<%= servico.id %>"><%= servico.nome %></option>
                <% }) %>
            </select>

            <label for="data">Data:</label>
            <input type="date" id="data" name="data" required />

            <label for="hora">Hora:</label>
            <input type="time" id="hora" name="hora" required />

            <label for="observacoes">Observações:</label>
            <textarea id="observacoes" name="observacoes" rows="3"></textarea>

            <button type="submit" class="btn">Salvar</button>
            <button type="button" id="btnCancelar" class="btn btn-cancel">Cancelar</button>
        </form>
    </div>
</div>

<script src="/js/dashboard.js"></script>

</body>
</html>